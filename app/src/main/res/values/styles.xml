<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="GridItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">@dimen/padding</item>
    </style>

    <style name="GridItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/big_title_font_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArtistText">
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AlbumText">
        <item name="android:textSize">@dimen/text_font_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
